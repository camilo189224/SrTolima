        android:textColor="@color/whitesmoke"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/pla400"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/txt350"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintVertical_bias="0"/>
    <ImageButton
        android:id="@+id/pla450"
        android:layout_width="107dp"
        android:layout_height="90dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/pla400"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintVertical_bias="0.3"
        android:src="@drawable/plato_400grs"
        />
    <TextView
        android:id="@+id/txt450"
        android:layout_width="107dp"
        android:layout_height="50dp"
        android:text="PLATO DE 450 GRAMOS - $25.000"
        android:textSize="14dp"
