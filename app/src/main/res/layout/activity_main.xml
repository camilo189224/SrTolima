<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/seagreen"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/pla200"
        android:layout_width="107dp"
        android:layout_height="90dp"
        android:src="@drawable/plato_200grs"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.03"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txt200"
        android:layout_width="107dp"
        android:layout_height="50dp"
        android:background="@color/sandybrown"
        android:text="PLATO DE 200 GRAMOS - $13.000"
        android:textAlignment="center"
        android:textColor="@color/whitesmoke"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pla200"
        app:layout_constraintVertical_bias="0" />
    <ImageButton
        android:id="@+id/pla250"
        android:layout_width="107dp"
        android:layout_height="90dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/pla200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintVertical_bias="0.03"
        android:src="@drawable/plato_250grs"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/txt250"
        android:layout_width="107dp"
        android:layout_height="50dp"
        android:text="PLATO DE 250 GRAMOS - $15.000"
        android:textSize="14dp"
        android:background="@color/green"
        android:textColor="@color/whitesmoke"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/pla250"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/txt200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintVertical_bias="0"/>
    <ImageButton
        android:id="@+id/pla300"
        android:layout_width="107dp"
        android:layout_height="90dp"
        app:layout_constraintTop_toTopOf="parent"
