        android:id="@+id/txt300"
        android:layout_width="107dp"
        android:layout_height="50dp"
        android:text="PLATO DE 300 GRAMOS - $17.000"
        android:textSize="14dp"
        android:background="@color/olive"
        android:textColor="@color/whitesmoke"
